<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/screen_button_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/sort_by"/>

    <RelativeLayout
        android:id="@+id/date_sort"
        android:layout_width="match_parent"
        android:layout_height="@dimen/screen_button_height"
        android:layout_gravity="center"
        android:gravity="center|left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16_dp"
            android:text="@string/sort_by_date" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider" />

    <RelativeLayout
        android:id="@+id/rate_sort"
        android:layout_width="match_parent"
        android:layout_height="@dimen/screen_button_height"
        android:layout_gravity="center"
        android:gravity="center|left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16_dp"
            android:text="@string/sort_by_rating" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider" />

    <RelativeLayout
        android:id="@+id/clear_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/screen_button_height"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/margin_16_dp"
        android:gravity="center|left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_sort" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider" />
</LinearLayout>
